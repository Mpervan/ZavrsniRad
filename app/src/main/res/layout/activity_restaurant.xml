<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#EDD5B8"
    android:orientation="vertical"
    tools:context=".RestaurantActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:padding="0dp"
        android:background="#D56C13"
        android:orientation="vertical"
        tools:context=".RestaurantActivity">

        <Button
            android:id="@+id/home"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="38dp"
            android:backgroundTint="#E18D4C"
            android:gravity="center"
            android:text="Home"
            android:textColor="#453020"
            android:textSize="23dp" />
        <Button
            android:id="@+id/viewOrder"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="-87dp"
            android:layout_marginBottom="38dp"
            android:layout_marginLeft="220dp"
            android:backgroundTint="#AC5612"
            android:gravity="center"
            android:text="Order"
            android:textColor="#E8CFBB"
            android:textSize="23dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blur_rest" />
    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:text="Restaurant Name"
        android:textColor="#C1450C"
        android:textSize="28dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Description"
        android:textColor="#5C5005"
        android:textSize="21dp"
         />
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        android:text="Open on:"
        android:layout_marginLeft="24dp"
        android:textColor="#4E8304"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/open1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-46dp"
        android:gravity="left"
        android:text="open on"
        android:textColor="#5C5005"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:text="Address:"
        android:textColor="#4E8304"
        android:textSize="19dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-46dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="Address"
        android:textColor="#5C5005"
        android:textSize="19dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="Phone:"
        android:textColor="#4E8304"
        android:textSize="21dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/phone1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="Phone"
        android:textColor="#5C5005"
        android:textSize="21dp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF7DC"
        android:id="@+id/search_bar"
        android:layout_margin="5dp"
        app:queryHint="Search"
        app:iconifiedByDefault="false"
        >
    </androidx.appcompat.widget.SearchView>
    <ListView
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_layout"/>




</LinearLayout>